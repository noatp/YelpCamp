<%= layout("layouts/boilerplate") %>
<h1>Login</h1>
<form action="/login" method="POST" class="validated-form" novalidate>
    <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
            type="text"
            id="username"
            class="form-control"
            name="username"
            required
        />
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
            type="password"
            id="password"
            class="form-control"
            name="password"
            required
        />
    </div>
    <button class="btn-success">Login</button>
</form>
